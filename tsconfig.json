{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["resources/ts/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["resources/ts/**/*.ts", "resources/ts/**/*.tsx", "resources/ts/**/*.d.ts"],
  "exclude": ["node_modules"]
}
